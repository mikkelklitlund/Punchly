{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"shared": ["../shared/dist"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
