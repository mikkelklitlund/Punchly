{
	"compilerOptions": {
		"target": "ES6",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist/esm",
		"declaration": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"rootDir": "src",
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"declarationDir": "dist/types"
	},
	"include": ["src/**/*", "scripts"]
}
