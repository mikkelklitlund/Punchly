{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "shared": ["../shared/dist"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
